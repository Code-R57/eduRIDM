<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="form_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/app_secondary</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="add_course_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/app_primary</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">180dp</item>
    </style>

    <style name="form_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/app_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="form_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:fontFamily">@font/days_one</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="settings_option_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/app_primary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:fontFamily">@font/days_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  For FAB custom layout  -->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">14dp</item>
        <item name="colorBackgroundFloating">@color/app_secondary</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    </style>
</resources>
