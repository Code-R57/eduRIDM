<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80d6ff">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="623dp"
            android:layout_height="629dp"
            android:background="@drawable/stopwatch_round"
            android:elevation="10dp"
            android:gravity="center"
            android:layoout_gravity="center"
            android:orientation="vertical"
            android:radius="300dp"
            app:layout_constraintBottom_toTopOf="@+id/pay_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            tools:context=".MainActivity">

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="236dp"
                android:layout_height="139dp"
                android:fontFamily="@font/roboto"
                android:format="00:00"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="84sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/pay_button"
            android:layout_width="169dp"
            android:layout_height="166dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/image_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stop_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/music_button"
            app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

        <ImageButton
            android:id="@+id/stop_button"
            android:layout_width="181dp"
            android:layout_height="165dp"
            android:background="#80d6ff"
            app:layout_constraintBottom_toBottomOf="@+id/pay_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pay_button"
            app:layout_constraintTop_toTopOf="@+id/pay_button"
            app:srcCompat="@drawable/ic_baseline_stop_24" />

        <ImageButton
            android:id="@+id/music_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80d6ff"
            app:layout_constraintBottom_toBottomOf="@+id/pay_button"
            app:layout_constraintEnd_toStartOf="@+id/pay_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pay_button"
            app:srcCompat="@drawable/ic_baseline_music_note_24" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="91dp"
            android:layout_height="74dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toStartOf="@+id/spinner"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_timer_headset" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="414dp"
            android:layout_height="74dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/timer_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>